<h1>Delete Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for deleting questions</p>
    <ul>
      <li>Are you sure?</li>
      <li>Deleting is irreversible</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control'%>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" value="">Resolved</label>
    </div>
    
    <div class="form-group">
      <%= f.submit "Delete", class: 'btn btn-danger' %>
    </div>
    
    <% end %>
  </div>
</div>

